

  <div class="row">
    <div>
      <%= render 'books/search_form' %>
      <br>
    </div>

    <% @book.each do |book| %>

      <div class="col-md-3">
        <a href="/books/<%= book.id %>">
          <%= image_tag(book.image, size: '200x300') if book.image.attached? %>
          <h4 class="book-title"><%= book.title %></h4>
        </a>
      </div>

    <% end %>

  </div>

<%= link_to "Add Book", new_book_path %>